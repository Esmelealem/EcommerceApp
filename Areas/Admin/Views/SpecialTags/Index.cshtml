@model IEnumerable<ECommerceProduct.Models.SpecialTags>
@{
    ViewData["Title"] = "Index";
}
<br />
<br />

<div class="row">
    <div class="cols-6">
        <h2 class="text-info">Special Tag List</h2>
    </div>
    <div class="col-12 text-right">
        <a asp-action="Create" class="btn btn-info">  
        <i class="fas fa-plus"></i>&nbsp; New Special Tag </a>
    </div>
</div>
<br />
<div>
    <table class="table-striped border col-12">
        <tr>
            <th class="table-info">
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
            </th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(m => item.Name)
        </td>
            @*<partial name="_ButtonPartial" model="item.Id" />*@
    <td style="width:150px">
        <div class="btn-group" role="group">
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i>
            </a>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">
                <i class="fas fa-list"></i>
            </a>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i>
            </a>
        </div>
    </td>
    </tr>
        }
    </table>
</div>

